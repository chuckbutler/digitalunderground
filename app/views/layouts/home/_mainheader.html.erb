<header id="header" class="glue">
  <div class="row clearfix">
    <div class="little-head">
      <% if not user_signed_in? %>
        <a href="/users/sign_in"><div id="Login_PopUp_Link" class="sign-btn tbutton small"><span>Sign In</span></div></a>
      <% end %>

      <div class="social social-head">
        <a href="http://twitter.com/" class="bottomtip" title="Follow us on Twitter" target="_blank"><i class="icon-twitter"></i></a>
        <a href="http://fb.com/" class="bottomtip" title="Like us on Facebook" target="_blank"><i class="icon-facebook"></i></a>
        <a href="https://plus.google.com/" class="bottomtip" title="GooglePlus" target="_blank"><i class="icon-google-plus"></i></a>
        <a href="http://instagram.com/" class="bottomtip" title="instagram" target="_blank"><i class="icon-instagram"></i></a>
        <a href="https://soundcloud.com/" class="bottomtip" title="Soundcloud" target="_blank"><i class="icon-cloud"></i></a>
        <a href="http://youtube.com/" class="bottomtip" target="_blank" title="YouTube"><i class="icon-youtube-play"></i></a>
        <a href="http://flickr.com/" class="bottomtip" target="_blank" title="Flickr"><i class="icon-flickr"></i></a>
      </div><!-- end social -->
      <!-- search -->
    </div><!-- little head -->
  </div><!-- row -->

  <div class="headdown">
    <div class="row clearfix">
      <div class="logo bottomtip" title="The Digital Underground - Where Djs Thrive">
        <a href="/"><img src="/images/logo.png" alt="Digital Underground Audio - Where Djs Thrive"></a>
      </div><!-- end logo -->

      <nav>
        <ul class="sf-menu">
          <li class=""><a href="/">Home<span class="sub">start here</span></a></li>
          <li><a href="/talent">DJ's<span class="sub">The Talent Pool</span></a>
          <li><a href="/venues">Venues<span class="sub">Club Audio</span></a>
        </li>
        <!-- <li><a href="/reviews">Reviews<span class="sub">Read DJ Reviews</span></a></li> -->
        <% if user_signed_in? %>
          <li><a href="#">Me<span class=="sub"><%= current_user.email %></span></a>
            <ul>
              <% if current_user.admin? %>
              <li><a href="/admin">Admin</a></li>
              <% end %>
              <li><a href="/users/edit">Account Settings</a></li>
              <% if current_user.dj %>
                <li> <a href="#"><i class="icon-caret-right mi"> DJ Style</i></a>
                  <ul>
                    <li><%= link_to 'Show My Profile', controller: "djs", action: "show", id: current_user.dj.id %></li>
                    <li><%= link_to 'Edit DJ Profile', controller: "djs", action: "edit", id: current_user.dj.id %></li>
                  </ul>
                </li>
              <% else %>
                <li><%= link_to 'Create DJ Profile', controller: "create_dj" %></li>
              <% end %>
              <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
            </ul>
          </li>
        <% end %>

      </ul><!-- end menu -->
    </nav><!-- end nav -->
  </div><!-- row -->
</div><!-- headdown -->
</header><!-- end header -->
