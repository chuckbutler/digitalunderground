<%= form_for @dj, :url => wizard_path, :method => :put do |f| %>
<% if @dj.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@dj.errors.count, "error") %> prohibited this dj from being saved:</h2>

  <ul>
    <% @dj.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="clearfix">
  <div class="field grid_4">
    <h5> For Hire </h5>
    <%= f.check_box :for_hire, class: "js-switch" %>
  </div>
  <div class="field grid_4">
    <h5> Looking to collaborate with other djs? </h5>
    <%= f.check_box :collab, class: "js-switch" %>
  </div>

  <div class="field grid_6">
    <h5> Write a short bio </h5>
    <%= f.text_area :bio, cols: 50, rows: 5 %>
  </div>
  <div class="field grid_6">
    <h5> What software/hardware do you use? </h5>
    <%= f.text_area :software %>
  </div>
  <div class="field grid_12 controls">
    <%= link_to 'previous', previous_wizard_path %>
    <%= f.hidden_field :id %>
    <%= f.submit "Next", class: "tbutton medium pull-right" %>
  </div>
</div>

<% end %>

<link rel="stylesheet" href="/styles/switchery.css" />
<script src="/js/switchery.js"></script>
<script type="text/javascript">
var elems = Array.prototype.slice.call(document.querySelectorAll('.js-switch'));
elems.forEach(function(html){
  var init = new Switchery(html, { color: '#FCE363' });
})
</script>
