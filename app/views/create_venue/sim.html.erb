  var elem = document.querySelector('.js-switch');
  var init = new Switchery(elem, { color: '#FCE363' });

  var changeCheckbox = document.querySelector('.js-switch');

  if(changeCheckbox.checked){
    $('#avname').removeClass('hidden')
  }
</script>
