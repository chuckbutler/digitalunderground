<div class="span4 sidebar">

  <div class="def-block widget">
    <h4> Social </h4><span class="liner"></span>
    <div class="widget-content">
      <% if @dj.facebook %>
      <h5><i class="icon-facebook large"><a href="<%= @dj.facebook %>" target="_blank"> Like me on Facebook</a> </i></h5>
      <% end %>
      <% if @dj.twitter %>
      <h5><i class="icon-twitter large"><a href="<%= @dj.twitter %>" target="_blank"> Follow me on twitter</a> </i></h5>
      <% end %>
      <% if @dj.soundcloud %>
      <h5><i class="icon-cloud large"><a href="<%= @dj.soundcloud %>" target="_blank"> Fan me on Soundcloud</a> </i></h5>
      <% end %>
      <% if @dj.mixcloud %>
      <h5><i class="icon-cloud large"><a href="<%= @dj.mixcloud %>" target="_blank"> Favorite me on Mixcloud</a> </i></h5>
      <% end %>
      <% if @dj.youtube %>
      <h5><i class="icon-youtube large"><a href="<%= @dj.youtube %>" target="_blank"> Subscribe to my channel</a> </i></h5>
      <% end %>
    </div><!-- widget content -->
  </div><!-- widget categories -->


  <div class="def-block widget">
    <div class="clearfix mbs">
      <h4> Venues </h4><span class="liner"></span>
      <div class="widget-content">
        <% @dj.venues.each do |venue| %>
        <div class="grid_4">
          <ul class="tab-content-items">
            <li class="clearfix">
              <a class="post-thumbnail" href="/venues/<%= venue.id %>"><img width="50" height="50" src="<%= venue.picture %>" alt="<%= venue.name %>"></a>
              <h3><a href="/venues/<%= venue.id %>"><%= venue.name %></a></h3>
              <p class="rating"> <i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star-empty"></i> </p>
            </li>
          </ul>
        </div>
        <% end %>
      </div>
    </div><!-- widget content -->
  </div><!-- widget top sales -->

  <div class="def-block widget">
    <h4> Genres </h4><span class="liner"></span>
    <div class="widget-content tags">
      <% @dj.categories.each do |genre| %>
        <span class="toptip"><i class="icon-tag"></i> <%= genre.name %> </span>
      <% end %>
    </div><!-- widget content -->
  </div><!-- widget tags -->

</div><!-- span4 sidebar -->
