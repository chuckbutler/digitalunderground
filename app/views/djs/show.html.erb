
<h4> DJ <%= @dj.name %> </h4><span class="liner"></span>

<div class="products shop clearfix">
  <div class="grid_12">
    <div class="clearfix mbs">
      <div class="grid_6">
        <div class="postslider clearfix flexslider">
          <ul class="slides">
            <li><img src="<%= @dj.picture %>" alt="#"></li>
          </ul>
        </div>
      </div><!-- grid6 -->

      <div class="grid_6 djinfo">
        <h3> <%= @dj.avatar_name %> </h3>
        <% if @dj.feature %>
          <h3 class="feature"><i class="icon-star-empty"> Featured Artist</i></h3>
        <% end %>
        <% if @dj.for_hire %>
          <h5 class="forhire"><i class="icon-suitcase"> Available for hire</i></h5>
        <% end %>
        <% if @dj.collab %>
          <h5 class="collab"><i class="icon-group"> Available for Collaboration</i></h5>
        <% end %>
        <% if @dj.location %>
          <p class="location">Location: <%= @dj.location %></p>
        <% end %>
        <% if @dj.experience %>
          <p class="experience">Experience: <%= @dj.experience %></p>
        <% end %>
        <% if @dj.software %>
          <p class="experience">Broadcasts with: <%= @dj.software %></p>
        <% end %>
        <p class="rating">
          <h5>Rating : </h5>
        </p>


      </div><!-- grid6 -->
    </div><!-- clearfix -->

    <div class="clearfix mbs">
